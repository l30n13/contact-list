<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inonity.buddybook" >

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_buddybook"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashScreenActivity_0"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeViewActivity_1"
            android:label="@string/title_activity_home_view_activity_1" />
        <activity
            android:name=".ContactListActivity"
            android:label="@string/title_activity_content_list" />
        <activity
            android:name=".ViewDetailsActivity"
            android:label="@string/title_activity_view_details" />
        <activity
            android:name=".AddNewContactActivity"
            android:label="@string/title_activity_add_new_contact" >
        </activity>
    </application>

</manifest>
